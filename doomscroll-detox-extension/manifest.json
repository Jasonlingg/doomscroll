{
  "manifest_version": 3,
  "name": "Doomscroll Detox",
  "version": "1.0.0",
  "description": "A browser extension to help reduce doomscrolling and promote healthier social media habits",
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "*://*.facebook.com/*",
    "*://*.x.com/*",
    "*://*.youtube.com/*",
    "*://*.instagram.com/*",
    "*://*.tiktok.com/*",
    "*://*.reddit.com/*",
    "*://*.linkedin.com/*",
    "http://127.0.0.1:8000/*",
    "http://localhost:8000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "css": ["css/content-styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Doomscroll Detox"
  }
}
